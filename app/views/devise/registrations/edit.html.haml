%h2.ui.header Edit Account
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui form", method: :put }) do |f|
  = devise_error_messages!
  .ui.grid{style: "max-width: 400px; margin: auto;"}
    .row.middle.aligned.field
      .sixteen.wide.column
        = f.email_field :email, autofocus: true, placeholder: 'Email'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      .row.middle.aligned.field
        .column
          %h3.ui.header Currently waiting confirmation for: #{resource.unconfirmed_email}
    .row.middle.aligned.field
      .sixteen.wide.column
        = f.password_field :password, autocomplete: "off", placeholder: 'Password'
    .row.middle.aligned.field
      .sixteen.wide.column
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password'
    .row.middle.aligned.field
      .sixteen.wide.column
        = f.password_field :current_password, autocomplete: "off", placeholder: 'New Password (Leave Blank to Keep the Same)'
  .actions
    = f.submit "Update", class: "ui inverted button", style: 'margin-top: 1rem;'
    = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui inverted button"
    = link_to  "Back", :back, class: "ui inverted button"
